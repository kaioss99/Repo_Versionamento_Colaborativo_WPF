<Window x:Class="AppAgendaDeTarefas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppAgendaDeTarefas"
        mc:Ignorable="d"
        Title="Agenda de Tarefas WPF"
        Height="420"
        Width="500"
        WindowState="Maximized"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Entrada -->
        <StackPanel Orientation="Horizontal">
            <TextBox x:Name="TxtTarefa" Width="300" Height="30" Margin="0,0,10,0" />
            <Button Content="Adicionar" Width="120" Height="30" Click="Adicionar_Click" />
            <Button Content="Limpar Lista" Width="120" Height="30" Click="Limpar_lista_Click" />
            <Button Content="Editar Tarefa" Width="120" Height="30" Click="Editartarefa_OnClick" />
            <!-- Botão duplicar tarefa -->
            <Button Content="Duplicar tarefa"
                    Width="120"
                    Height="30"
                    Click="BtnDuplicar" />

            <!-- Botão Mover tarefa para cima -->
            <Button
                Content="Mover para Cima (UP)"
                Width="120"
                Height="30"
                Click="BtnMoverTarefaUp_Click"
                Margin="0,0,10,5" />

            <Button
                Content="Mover para Baixo (DOWN)"
                Width="120"
                Height="30"
                Click="BtnMoverTarefaDown_Click"
                Margin="0,0,10,5" />

            <Button
                Content="Marcar como concluída"
                Width="135"
                Height="30"
                Click="BtnConcluida_OnClick"
                Margin="0,0,10,5" />

        </StackPanel>

        <!-- Lista -->
        <ListBox x:Name="ListaTarefas"
                 Grid.Row="1"
                 FontSize="16" />

        <!-- Rodapé -->
        <TextBlock Grid.Row="2" Text="Agenda de Tarefas - Versão Base"
                   HorizontalAlignment="Center" Margin="0,10,0,0" />
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <TextBlock Text="Total de Tarefas: " Margin="0,40,0,0" />
            <TextBlock x:Name="TbxContadorTarefas" Margin="2,40,0,0" />
        </StackPanel>
    </Grid>
</Window>